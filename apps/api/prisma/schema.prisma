generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  phone     String?
  avatar    String?
  
  // Destination info as JSON
  destination Json  // { city: string, country: string }
  
  // Study info
  purpose      String
  budget       Json?  // { accommodation?: string, course?: string }
  englishLevel String?
  arrivalDate  String?
  
  // Notifications
  hasUnreadNotifications Boolean @default(false)
  notificationCount      Int     @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
